<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.freesofts.desktop.mapper.EditorMapper">

    <sql id="Base_Column_List">
        id
        as id, `name` as `name`, `type` as `type` ,`options` as `options`,sort as sort,
        description as description,created_by as createBy,creator_name as creatorName,
        created_date as createdDate,last_modified_by as lastModifiedBy,
        last_modified_name as lastModifiedName,last_modified_date as lastModifiedDate
    </sql>

    <sql id="Where_If">
        <if test="editor.name != null and editor.name != ''">
            and `name` = #{editor.name}
        </if>
        <if test="editor.type != null and editor.type != ''">
            and `type` = #{editor.type}
        </if>
        <if test="editor.options != null and editor.options != ''">
            and `options` = #{editor.options}
        </if>
    </sql>
    <insert id="insert">
        insert into desktop_editor(id, `name`, `type`, `options`, `sort`, `description`, created_by,
                                   creator_name, created_date)
        values (#{editor.id}, #{editor.name}, #{editor.type}, #{editor.options},
                #{editor.sort}, #{editor.description}, #{editor.createdBy}, #{editor.creatorName},
                #{editor.createdDate})
    </insert>

    <update id="updateById">
        update desktop_editor
        <set>
            <if test="editor != null">
                `name` = #{editor.name},`type` = #{editor.type},`options` = #{editor.options},`sort` = #{editor.sort},
                description = #{editor.description},last_modified_by = #{editor.lastModifiedBy},
                last_modified_name = #{editor.lastModifiedName},last_modified_date = #{editor.lastModifiedDate}
            </if>
        </set>
        <where>
            <if test="editor != null">
                id = #{editor.id}
            </if>
        </where>
    </update>

    <delete id="deleteByIds">
        delete from desktop_editor where id in
        <foreach collection="ids" separator="," open="(" close=")" item="item">
            #{item}
        </foreach>
    </delete>

    <select id="selectById" resultType="com.freesofts.model.model.Editor">
        select
        <include refid="Base_Column_List"/>
        from desktop_editor
        where id = #{id}
    </select>
    <select id="selectPageList" resultType="com.freesofts.model.model.Editor">
        select
        <include refid="Base_Column_List"/>
        from desktop_editor
        <where>
            <include refid="Where_If"/>
        </where>
        order by sort
        <if test="pageSize != 0">
            limit #{pageNum}, #{pageSize}
        </if>
    </select>

    <select id="pageListNum" resultType="java.lang.Long">
        select
        count(1)
        from desktop_editor
        <where>
            <include refid="Where_If"/>
        </where>
    </select>
    <select id="selectEditorListNoPage" resultType="com.freesofts.model.model.Editor">
        select
        <include refid="Base_Column_List"/>
        from desktop_editor
        <where>
            <include refid="Where_If"/>
        </where>
    </select>
</mapper>